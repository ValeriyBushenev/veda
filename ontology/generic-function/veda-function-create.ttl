v-fc:BlankManagementTemplate
  rdf:type v-ui:ClassTemplate ;
  rdfs:label "Шаблон класса v-fc:Blank"@ru ;
  rdfs:label "V-fc:Blank class template"@en ;
  v-ui:forClass v-fc:Blank ;
  v-ui:template """
<script>
  var notify = new veda.Notify();

  if ( !individual.hasValue("v-s:creator", veda.appointment || veda.user) ) {
    $(".action.save-blank", template).click(function () {
      var personalLabel = prompt( new veda.IndividualModel("v-fc:EnterLabel").toString(), individual.toString() );
      if (!personalLabel) { return; }
      var personalBlank = individual.clone();
      personalBlank["rdfs:isDefinedBy"] = [];
      personalBlank["rdfs:label"] = [ personalLabel ];
      personalBlank.object = individual.object;
      personalBlank.updateBlank();
      personalBlank.save();
      var aspect = veda.user.aspect;
      aspect.addValue("v-s:hasBlank", personalBlank);
      aspect.save();
      notify("success", { message: new veda.IndividualModel("v-fc:BlankSuccessfullySaved").toString() });
    });
  } else {
    $(".action.save-blank", template).remove();
  }

  if ( individual.rights.hasValue("v-s:canUpdate", true) ) {
    $(".action.update-blank", template).click(function () {
      var personalLabel = prompt( new veda.IndividualModel("v-fc:EnterLabel").toString(), individual.toString() );
      individual["rdfs:label"] = [ personalLabel ];
      individual.updateBlank();
      individual.save();
      notify("success", { message: new veda.IndividualModel("v-fc:BlankSuccessfullyUpdated").toString() });
    });
  } else {
    $(".action.update-blank", template).remove();
  }
  if ( individual.rights.hasValue("v-s:canDelete", true) ) {
    $(".action.delete-blank", template).click(function () {
      var aspect = veda.user.aspect;
      aspect.removeValue("v-s:hasBlank", individual);
      aspect.save();
      notify("success", { message: new veda.IndividualModel("v-fc:BlankSuccessfullyDeleted").toString() });
      template.trigger("delete");
      window.history.back();
    });
  } else {
    $(".action.delete-blank", template).remove();
  }
//# sourceURL=v-fc:BlankManagementTemplate_pre
</script>
<div>
