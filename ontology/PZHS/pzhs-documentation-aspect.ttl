<http://semantic-machines.com/veda/pzhs-documentation-aspect>
  rdf:type owl:Ontology ;
  rdfs:label "Онтология Промжилсервис. Управление документами. Аспект"@ru ;
  rdfs:label "Promzhilservis ontology. Documentation aspect"@en ;
  v-s:loadPriority 10 ;
.
# ASPECT ---------------------------------------------------------------

pzhs:DocumentationManagementAspect
  rdf:type v-s:Aspect ;
  rdfs:label "Управление документами"@ru ;
  rdfs:label "Document management"@en ;
  rdfs:comment "Еще один шаг, приближающий к цели."@ru ;
  rdfs:comment "Another step making things happen."@en ;
  v-s:shortLabel "Документы"@ru ;
  v-s:shortLabel "Documentation"@en ;
  v-s:hasImage pzhs:DocumentationManagementImage ;

  v-s:hasBlank v-s:IncomingLetterBlank ;
  v-s:hasBlank v-s:OutgoingLetterBlank ;
  v-s:hasBlank v-s:OrganizationBlank ;

  v-s:hasRegistry v-s:IncomingLetterRegistry ;
  v-s:hasRegistry v-s:OutgoingLetterRegistry ;
  v-s:hasRegistry v-s:OrganizationRegistry ;

  v-s:hasReport v-s:blankCreateCountOfUsersTasks_report ;
  v-s:hasReport v-s:blankCreateCompletedTasksCount_Report ;

  v-ui:hasTemplate pzhs:DocumentationManagementAspectTemplate ;
.

# IMAGE ----------------------------------------------------------------

pzhs:DocumentationManagementImage
  a v-s:File ;
  v-s:fileUri "documentation.jpg"^^xsd:string ;
  v-s:fileName "documentation.jpg"^^xsd:string ;
  v-s:filePath "/pzhs"^^xsd:string ;
.

